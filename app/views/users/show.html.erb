<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= "/user_images/#{@user.image_name}" %>">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if @user.id == @current_user.id %>
        <%= link_to("編集", "/users/#{@user.id}/edit", data: {"turbolinks" => false}) %>
      <% else %>
        <% if @isRoom == true %>
          <!-- チャットの続きへ -->
          <a href="/rooms/<%= @roomId %>">チャットへ</a>
        <% else %>
          <%= form_for @room do |f| %>
            <%= fields_for @entry do |e| %>
              <%= e.hidden_field :user_id, :value=> @user.id %>
            <% end %>
            <!-- 新規チャットルーム生成 -->
            <%= f.submit "チャットを始める" %>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <% @user.posts.each do|post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/users/#{post.user.id}", data: {"turbolinks" => false}) %>
          </div>
          <%= link_to(post.content, "/posts/#{post.id}", data: {"turbolinks" => false}) %>

          <div class="post-image">
            <% if post.image %>
              <!-- 投稿画像 -->
              <a href="<%= "/post_images/#{post.image}" %>" target="_blank"><img src="<%= "/post_images/#{post.image}" %>"></a>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>